// Template CSS Files
link(href='/assets/css/style.css' rel='stylesheet')
link(href='/assets/css/user.css' rel='stylesheet')

// ======= Header =======
include parts/header.pug
// End Header

// ======= Main =======
.container
  .profile-header
    img.user-img(src=`${userData.img}` alt='profile pic')
    .user-text
      h4= userData.name
      span.main-status= userDataConverted.cleanStatuses[0]
      each val in userDataConverted.cleanStatuses.slice(1)
        span= val
    a#editBtn.edit-btn(href="/custom-card")
      i.fas.fa-user-edit  

  .cards
    .card-side
      svg(xmlns='http://www.w3.org/2000/svg' width='145.519' height='200.274' viewbox='0 0 145.519 200.274')
        path#Path_2(data-name='Path 2' d='M476.99,0c-1.171,0-64.788,37.464-7.415,93.134s21.856,107.139,21.856,107.139H356.781V0Z' transform='translate(-356.781)' fill='#fcdbdb')

      header='ამნისტიის მხარდამჭერთა საზოგადოება'
      main
        .card-col
          span სახელი გვარი
          h4#userName= userData.name
          span დაბადების თარიღი
          h4#userDate= userData.birth_date
        .card-col
          span პირადი ნომერი
          h4#userIdNum= userData.id_number
          span ნომერი
          h4#userCardNum= userData.card_number
        .card-col
          img#cardImg.card-img(src=userData.img alt='user')
      footer
        .card-status
          img#userBadge(src=`/assets/img/card/${userDataConverted.convertedClasses[0]}.png` alt='badge')
          div#userStatus= userDataConverted.cleanStatuses[0]
        div
          | რეგისტრირდა: 
          span#cardRegister= userData.registration

    .card-side
      svg(xmlns='http://www.w3.org/2000/svg' width='145.519' height='200.274' viewbox='0 0 145.519 200.274')
        path#Path_2(data-name='Path 2' d='M476.99,0c-1.171,0-64.788,37.464-7.415,93.134s21.856,107.139,21.856,107.139H356.781V0Z' transform='translate(-356.781)' fill='#fcdbdb')

      header AMNESTY SUPPORTERS SOCIETY
      main
        .card-col
          span Name Surname
          h4#userName= userDataConverted.convertedName
          span Birth Date
          h4#userDate= userData.birth_date
        .card-col
          span Personal Number
          h4#userIdNum= userData.id_number
          span Number
          h4#userCardNum= userData.card_number
        .card-col
          img(src= 'data:image/png;base64,')
      footer
        .card-status
          img#userBadge.img-fluid(src=`/assets/img/card/${userDataConverted.convertedClasses[0]}.png` alt='badge')
          div#userStatus= userDataConverted.convertedStatus
        div
          | Registered: 
          span#cardRegister= userData.registration

 
